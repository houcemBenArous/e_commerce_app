# Backend Environment Example
# Copy to .env and adjust values for your environment

# Server
PORT=3001
FRONTEND_ORIGIN=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/e_commerce_app

# JWT
JWT_AT_SECRET=replace_with_strong_access_secret
JWT_AT_EXPIRES_IN=15m
JWT_RT_SECRET=replace_with_strong_refresh_secret
JWT_RT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# SMTP (Email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=No-Reply <no-reply@example.com>
APP_NAME=E-Commerce App

# OTP / Verification
# One-time passcode (OTP) validity in seconds (default 300 = 5 minutes)
OTP_TTL_SECONDS=300
# Cooldown between resend requests in seconds (default 30)
OTP_RESEND_COOLDOWN_SECONDS=30
# Maximum number of incorrect attempts allowed (default 5)
OTP_MAX_ATTEMPTS=5
# Cleanup verification docs after N hours from creation (default 24)
VERIFICATION_CLEANUP_TTL_HOURS=24

# Password Reset (Reset by Link)
# Reset link validity in seconds (default 900 = 15 minutes)
PASSWORD_RESET_TTL_SECONDS=900
# Cooldown between reset requests for the same email (default 60 seconds)
PASSWORD_RESET_RESEND_COOLDOWN_SECONDS=60
# Cleanup password reset docs after N hours from creation (default 48)
PASSWORD_RESET_CLEANUP_TTL_HOURS=48
